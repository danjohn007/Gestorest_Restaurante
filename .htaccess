RewriteEngine On

# Allow direct access to image files
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|ico|svg)$ [NC]
RewriteRule ^(.*)$ - [L]

# Allow direct access to uploads directory - handle URL encoding
RewriteCond %{REQUEST_URI} ^/restaurante/public/uploads/ [NC]
RewriteRule ^(.*)$ - [L]

# Allow direct access to uploads directory - handle normal encoding  
RewriteCond %{REQUEST_URI} ^/restaurante/public/uploads/ [NC]
RewriteRule ^(.*)$ - [L]

# Default routing for other requests
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# Cache control for static files
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
    Header set Cache-Control "max-age=31536000, public"
</FilesMatch>

# Deny access to sensitive files
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

<Files "*.sql">
    Order allow,deny
    Deny from all
</Files>